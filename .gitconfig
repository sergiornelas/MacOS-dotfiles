[user]
  name = Sergio Ornelas
  email = sergio.ornelas@nextiva.com
[core]
	editor = nvim
	excludesfile = /Users/sergioornelas/.gitignore
  pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true    # use n and N to move between diff sections
  light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
	side-by-side = true
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
